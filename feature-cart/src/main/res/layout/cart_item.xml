<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/layout_space_big"
    android:paddingTop="@dimen/layout_space_small"
    android:paddingRight="@dimen/layout_space_big"
    android:clipToPadding="false"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCartItem"
        app:cardCornerRadius="@dimen/corner_radius_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="80dp"
                android:layout_height="105dp"
                android:layout_marginLeft="@dimen/layout_space_small"
                android:layout_marginTop="@dimen/layout_space_small"
                android:layout_marginBottom="@dimen/layout_space_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvModel"
                style="@style/Subtitle1Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/layout_space_tiny"
                app:layout_constraintBottom_toTopOf="@+id/tvPrice"
                app:layout_constraintLeft_toRightOf="@id/ivProduct"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2020 Apple iPad Air 10.9" />

            <TextView
                android:id="@+id/tvPrice"
                style="@style/Subtitle1Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/violet"
                app:layout_constraintBottom_toTopOf="@+id/tvQuantity"
                app:layout_constraintLeft_toLeftOf="@id/tvModel"
                app:layout_constraintTop_toBottomOf="@+id/tvModel"
                tools:text="$375.00" />

            <TextView
                android:id="@+id/tvQuantity"
                style="@style/Body2Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tvPrice"
                app:layout_constraintTop_toBottomOf="@+id/tvPrice" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>